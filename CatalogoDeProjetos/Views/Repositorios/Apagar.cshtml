@model RepositoriosModel
@{
    ViewData["Title"] = "Confirmação apagar repositorio";
}
<div class="text-center">
    <h3>Realmente deseja apagar o repositorio (@Model.Nome)</h3>
    <a class="btn btn-primary btn-block" role="button" asp-controller="Repositorios" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Repositorios" asp-action="ApagarConfirmacao" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>
