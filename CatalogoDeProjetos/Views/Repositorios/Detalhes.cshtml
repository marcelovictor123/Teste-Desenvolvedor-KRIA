@model RepositoriosModel
@{
    ViewData["Title"] = "Detalhes do Repositório";
}

<h1>@Model.Nome</h1>
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>@Model.Descricao</td>
        </tr>
        <tr>
            <th>Linguagem</th>
            <td>@Model.Linguagem</td>
        </tr>
        <tr>
            <th>Data de Atualização</th>
            <td>@Model.DataAtualizacao</td>
        </tr>
        <tr>
            <th>Dono</th>
            <td>@Model.Dono</td>
        </tr>
        @if (Model.Favorito)
        {
        <form asp-action="Desfavoritar" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Remover dos favoritos</button>
        </form>
        }
        else
        {
        <form asp-action="Favoritar" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-primary">Adicionar aos favoritos</button>
        </form>
        }
    </tbody>
</table>

<div class="text-center">
    <div class="a-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Repositorios" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-danger" role="button" asp-controller="Repositorios" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
        <a class="btn btn-secondary" role="button" asp-controller="Repositorios" asp-action="Index" asp-route-id="@Model.Id">Voltar</a>
        
    </div>
</div>
